generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  guideId         Int?
  providerId      Int?
  email           String    @unique
  name            String
  password        String
  tel             String?
  level           String
  lineUserId      String?
  lineDisplayName String?
  linePictureUrl  String?
  createdAt       DateTime? @default(now()) @db.Timestamp(0)
  updatedAt       DateTime? @updatedAt
  status          String
  guide           Guide?    @relation(fields: [guideId], references: [id])
  provider        Provider? @relation(fields: [providerId], references: [id])
  Cart            Cart[]
}

model Guide {
  id         Int       @id @default(autoincrement())
  name       String
  dicription String?
  image      String?
  status     String
  Service    Service[]
  User       User[]
  Cart       Cart[]
}

model Provider {
  id         Int       @id @default(autoincrement())
  name       String
  dicription String?
  image      String?
  status     String
  Service    Service[]
  User       User[]
  Cart       Cart[]
}

model Service {
  id              Int               @id @default(autoincrement())
  guideId         Int?
  providerId      Int?
  name            String
  specifyDate     Int               @default(0)
  specifyTime     Int               @default(0)
  price           Int
  priceUnit       String
  priceType       String?
  period          Int
  periodUnit      String
  dicription      String?
  image           String?
  status          String
  createdAt       DateTime          @default(now()) @db.Timestamp(0)
  updatedAt       DateTime          @updatedAt
  guide           Guide?            @relation(fields: [guideId], references: [id])
  provider        Provider?         @relation(fields: [providerId], references: [id])
  ServiceTimeLine ServiceTimeLine[]
  Cart            Cart[]
}

model ServiceTimeLine {
  id         Int      @id @default(autoincrement())
  serviceId  Int
  title      String
  dicription String?
  color      String?
  createdAt  DateTime @default(now()) @db.Timestamp(0)
  Service    Service  @relation(fields: [serviceId], references: [id])
}

model Cart {
  id         Int       @id @default(autoincrement())
  userId     Int
  serviceId  Int
  guideId    Int?
  providerId Int?
  quantity   Int
  price      Int
  totalPrice Int
  date       DateTime?
  status     String
  createdAt  DateTime  @default(now()) @db.Timestamp(0)
  updatedAt  DateTime  @updatedAt
  User       User      @relation(fields: [userId], references: [id])
  Service    Service   @relation(fields: [serviceId], references: [id])
  guide      Guide?    @relation(fields: [guideId], references: [id])
  provider   Provider? @relation(fields: [providerId], references: [id])
}

model Upload {
  id        Int      @id @default(autoincrement())
  serviceId Int?
  type      String
  file_name String
  extension String?
  size      Int      @default(0)
  file_path String
  createdAt DateTime @default(now()) @db.Timestamp(0)
}
